@model OnlineRestaurant.Web.Models.Order

@{
    ViewData["Title"] = "Create";
}

<h1 style="color:brown;text-align:center;font-size:40px;">Create</h1>

<h4>Order Here : </h4>
<hr />
<div class="row" style="background-color:aquamarine;">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="OrderedFoodName" class="control-label"></label>
                <input asp-for="OrderedFoodName" class="form-control" />
                <span asp-validation-for="OrderedFoodName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="OrderDateTime" class="control-label"></label>
                <input asp-for="OrderDateTime" class="form-control" />
                <span asp-validation-for="OrderDateTime" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="OrderedQuantity" class="control-label"></label>
                <input asp-for="OrderedQuantity" class="form-control" />
                <span asp-validation-for="OrderedQuantity" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FoodCategoryId" class="control-label"></label>
                <select asp-for="FoodCategoryId" class ="form-control" asp-items="ViewBag.FoodCategoryId"></select>
            </div>
            <div class="form-group">
                <label asp-for="CustomerId" class="control-label"></label>
                <select asp-for="CustomerId" class ="form-control" asp-items="ViewBag.CustomerId"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
